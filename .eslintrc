{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "eqeqeq": ["error", "always"],
    "camelcase": ["warn"],
    "prefer-template": "off"
  },

  "extends": ["airbnb-base", "prettier"]
}
